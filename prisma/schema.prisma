generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  email         String  @unique
  password      String
  role          Role
  liveIn        String?
  streetAddress String?
  postalCode    String?
  dateOfBirth   String?
  gender        String?
  profilePic    String?
}

enum Role {
  USER
  ADMIN
}

model Car {
  adminId      String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  brand        String
  year         String
  fuelType     String
  topSpeed     String
  transmission String
  mileage      String
  price        String
  imageUrl     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
